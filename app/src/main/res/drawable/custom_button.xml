<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="#30BE71" />
            <gradient android:angle="-90" android:startColor="#30BE71" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="#30BE71" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="#30BE71" />
            <gradient android:angle="-90" android:startColor="#30BE71" android:endColor="#58857e" />
        </shape>
    </item>
</selector>